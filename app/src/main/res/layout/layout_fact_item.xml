<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/each_journey_list_id"
    >

    <ImageView
        android:id="@+id/Journey_Image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_size"
        android:background="@drawable/ic_baseline_image_24"
        android:scaleType="fitXY"

        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="vertical"
        />
    <TextView
        android:id="@+id/Place_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:text="Po"
        />
    <TextView
        android:id="@+id/Place_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/guideline_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/Place_Name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="This is Pokhara where you can see lots of thing and have lots of fun ok.this is a lovely place like it hsdkhadh hsdkadksj hdkaskdjas hdjahsjdh dhsad shdajhdjhasjdhdasjdh"
        />
    <Button
        android:id="@+id/delete_fragment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/TextColorSection"
        android:text="Delete"
        />
    <Button
        android:id="@+id/view_edit_fragment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="150dp"
        android:backgroundTint="@color/TextColorSection"
        android:text="Edit"
        />

</androidx.constraintlayout.widget.ConstraintLayout>