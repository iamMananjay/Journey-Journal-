<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.notifications.NotificationsFragment">


    <ImageView
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/logoutbackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/image_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/profilesectiona"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/user_name_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alina Heka"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/image_section"
        app:layout_constraintEnd_toEndOf="@id/image_section"
        app:layout_constraintTop_toBottomOf="@id/image_section"
        />

    <TextView
        android:id="@+id/user_email_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alinaheka99@gmail.com"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/user_name_section"
        app:layout_constraintEnd_toEndOf="@id/user_name_section"
        app:layout_constraintTop_toBottomOf="@id/user_name_section"
        />

    <ImageView
        android:id="@+id/edit_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="360dp"
        android:layout_marginTop="288dp"
        android:background="@drawable/ic_baseline_edit_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/user_icon_section"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_a_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_section"
        />

    <TextView
        android:id="@+id/Rate_app_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/TextColorSection"
        android:text="Rate App"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_section"
        />

    <ImageView
        android:id="@+id/share_icon_section"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_a_share_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_icon_section"
        />

    <TextView
        android:id="@+id/share_app_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/TextColorSection"
        android:text="Share App"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Rate_app_section"
        />


    <Button
        android:id="@+id/logout_btn"
        android:layout_width="100dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:text="Logout"
        android:textSize="15dp"
        android:gravity="center"
        android:backgroundTint="@color/TextColorSection"
        android:textAllCaps="false"
        />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ica_arrow"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="22dp"


        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:srcCompat="@drawable/ica_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="22dp" />
</androidx.constraintlayout.widget.ConstraintLayout>